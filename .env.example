# Database Configuration
DATABASE_URL=postgresql://infohub_user:changeme@localhost:5432/infohub_ai
POSTGRES_DB=infohub_ai
POSTGRES_USER=infohub_user
POSTGRES_PASSWORD=changeme

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_AUTH_TOKEN=changeme

# AI/ML Configuration
# Choose one or both LLM providers
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Embedding model configuration
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
EMBEDDING_DIMENSION=768

# LLM Configuration
LLM_PROVIDER=openai  # openai or anthropic
LLM_MODEL=gpt-4-turbo-preview  # or claude-3-opus-20240229
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-very-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Web Scraper Configuration
SCRAPER_USER_AGENT=InfoHubAI-Bot/1.0 (+https://yourwebsite.com/bot)
SCRAPER_DELAY=2.0
SCRAPER_CONCURRENT_REQUESTS=5
SCRAPER_DOWNLOAD_DELAY=1.0
SCRAPER_AUTOTHROTTLE_ENABLED=true
SCRAPER_RESPECT_ROBOTS_TXT=true

# Firecrawl Configuration (for SPA scraping)
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here

# Scraper Schedule (Cron format)
SCRAPER_SCHEDULE_CRON=0 2 * * *  # Daily at 2 AM

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE_PATH=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GUEST=10/minute
RATE_LIMIT_USER=60/minute
RATE_LIMIT_ADMIN=1000/minute

# Cache Configuration
CACHE_TTL_QUERY=3600  # 1 hour
CACHE_TTL_DOCUMENT=7200  # 2 hours
CACHE_ENABLED=true

# RAG Configuration
RAG_TOP_K=10  # Number of chunks to retrieve
RAG_RERANK_TOP_K=5  # Number of chunks after reranking
RAG_CHUNK_SIZE=1024  # Chunk size in tokens
RAG_CHUNK_OVERLAP=128  # Overlap between chunks
RAG_MIN_SIMILARITY=0.5  # Minimum similarity score

# Application Settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true
TESTING=false

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@infohub-ai.com
ADMIN_EMAIL=admin@yourcompany.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM
BACKUP_RETENTION_DAYS=30
S3_BUCKET_NAME=infohub-ai-backups
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Feature Flags
FEATURE_OCR_ENABLED=true
FEATURE_VOICE_INTERFACE=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MULTI_TENANCY=false

# Security
JWT_SECRET_KEY=another-very-secret-key-for-jwt-tokens-min-32-chars
ENCRYPTION_KEY=base64-encoded-encryption-key-32-bytes
SESSION_SECRET=session-secret-key-change-in-production

# Session Configuration
SESSION_TIMEOUT=1800  # 30 minutes in seconds
MAX_SESSIONS_PER_USER=5

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.docx,.txt,.html

# Document Processing
PROCESS_BATCH_SIZE=100
MAX_DOCUMENT_SIZE_MB=50
OCR_LANGUAGE=kat+rus+eng  # Georgian, Russian, English

# Performance Tuning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=3600  # 1 hour
CELERY_TASK_SOFT_TIME_LIMIT=3300  # 55 minutes

# Development/Debug Settings
RELOAD=true  # Auto-reload on code changes
SHOW_SQL_QUERIES=false
PROFILE_REQUESTS=false
